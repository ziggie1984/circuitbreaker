[Unit]
Description=Docker Compose Circuitbreaker  Service
Requires=umbrel-startup.service
After=umbrel-startup.service

[Service]
User=umbrel
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/docker-compose  -f /home/umbrel/umbrel/docker-compose-circuitbreaker.yml -p circuitbreaker up  -d
ExecStop=/usr/local/bin/docker-compose  -f /home/umbrel/umbrel/docker-compose-circuitbreaker.yml -p circuitbreaker  down
TimeoutStartSec=60
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
